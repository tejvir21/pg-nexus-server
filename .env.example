# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ========================================
# DATABASE CONFIGURATION (MongoDB Atlas)
# ========================================
# Get this from MongoDB Atlas: 
# 1. Go to atlas.mongodb.com
# 2. Create cluster → Connect → Connect your application
# 3. Copy connection string and replace <password> with your password
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/pg-nexus?retryWrites=true&w=majority

# ========================================
# JWT CONFIGURATION
# ========================================
# Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production-minimum-32-characters
JWT_REFRESH_EXPIRE=30d

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
# Choose: 'local' or 'cloudinary'
UPLOAD_PROVIDER=local
MAX_FILE_SIZE=10485760
# 10MB in bytes (10 * 1024 * 1024)

# Cloudinary Configuration (if using cloud storage)
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ========================================
# EMAIL CONFIGURATION
# ========================================
# Choose: 'gmail' or 'sendgrid' or 'none'
EMAIL_PROVIDER=gmail

# Gmail Configuration (if using Gmail)
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character app password below
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=PG Nexus
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password

# SendGrid Configuration (if using SendGrid)
# Get free API key from: https://sendgrid.com/
SENDGRID_API_KEY=your-sendgrid-api-key

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds (15 * 60 * 1000)
RATE_LIMIT_MAX_REQUESTS=100
# Max 100 requests per 15 minutes per IP

# ========================================
# SECURITY
# ========================================
BCRYPT_ROUNDS=10
# Higher = more secure but slower (10-12 recommended)

# ========================================
# REAL-TIME (Socket.IO)
# ========================================
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# ========================================
# OPTIONAL: ADMIN SETUP
# ========================================
# First admin user (created automatically on startup)
ADMIN_EMAIL=admin@pgnexus.com
ADMIN_PASSWORD=Admin@123456
ADMIN_NAME=System Administrator
